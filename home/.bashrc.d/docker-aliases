alias aws='docker run --rm -t $(tty &>/dev/null && echo "-i") -v "${HOME}/.aws:/root/.aws" -v "$(pwd):/project" mesosphere/aws-cli'
alias ansible='docker run --rm -t $(tty &>/dev/null && echo "-i") -v "$(pwd):/project" -v "${SSH_AUTH_SOCK}:/tmp/ssh_auth_sock" -e "SSH_AUTH_SOCK=/tmp/ssh_auth_sock" -w "/project" --entrypoint="ansible" williamyeh/ansible:alpine3'
alias ansible-playbook='docker run --rm -t $(tty &>/dev/null && echo "-i") -v "$(pwd):/project" -v "${HOME}/.ssh:/root/.ssh" -w "/project" --entrypoint="ansible-playbook" williamyeh/ansible:alpine3'
